<Defs>
	<!-- All WIP -->
	<!-- Minor -->
	<HediffDef ParentName="DiseaseBase">
		<defName>PathfinderRegenerationProgressMinor</defName>
		<label>Regenerating</label>
		<description>This body part is currently restoring itself, due to being relatively minor part this should only take about 10 days to complete and will only require a few bodily resources.</description>
		<isBad>false</isBad>
		<priceImpact>false</priceImpact>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.10</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>finalizing regeneration</label>
				<partEfficiencyOffset>-0.2</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<label>regenerating muscleclature</label>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.4</minSeverity>
				<label>establishing neural connections</label>
				<partEfficiencyOffset>-0.8</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<label>reconnecting blood flow</label>
				<partEfficiencyOffset>-1</partEfficiencyOffset>
			</li>
			<li>
				<minSeverity>0.8</minSeverity>
				<label>generating cellular scaffold</label>
				<partEfficiencyOffset>-1</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>

