      <min>2000</min>
      <max>3000</max>
    </techHediffsMoney>

    
    <invNutrition>3</invNutrition>
    <inventoryOptions>
      <skipChance>0</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>85</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>125~170</countRange>
        </li>
        <li>
          <choiceChance>15</choiceChance>
          <thingDef>Silver</thingDef>
