<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="PathfinderShellBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>55</stackLimit>
    <techLevel>Spacer</techLevel>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>75</MarketValue>
      <Mass>1</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>PathfinderArtilleryShells</li>
    </thingCategories>
    <tradeTags>
      <li>MortarShell</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="PathfinderMakeableShellBase" ParentName="PathfinderShellBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>900</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <!-- High-explosive -->

  <ThingDef ParentName="PathfinderMakeableShellBase">
    <defName>Pathfinder_ArtilleryShell_HighExplosive</defName>
    <label>Pathfinder high-explosive shell</label>
    <description>A shell filled with high explosives. Can be fired from a pathfinder artillery piece. Explodes when damaged.</description>
    <graphicData>
      <texPath>Things/Shells/Pathfinder_Shell_HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.2</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.2</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>230~360</wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>Bullet_PathfinderShell_HighExplosive</projectileWhenLoaded>
    <costList>
      <Steel>10</Steel>
      <Chemfuel>10</Chemfuel>
    </costList>
    <costListForDifficulty>
      <difficultyVar>classicMortars</difficultyVar>
      <costList>
        <Steel>20</Steel>
        <Chemfuel>10</Chemfuel>
      </costList>
    </costListForDifficulty>
    <recipeMaker>
      <researchPrerequisite>Mortars</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_PathfinderShell_HighExplosive</defName>
    <label>Pathfinder high-explosive shell</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeATShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>80</speed>
      <explosionRadius>3.5</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
  
  <!-- EMP -->

  <ThingDef ParentName="PathfinderMakeableShellBase">
    <defName>PathfinderShell_EMP</defName>
    <label>Pathfinder EMP shell</label>
    <description>A shell filled with batteries and antennas, for generating an electromagnetic pulse when detonated. Electromagnetic pulses temporarily disable electrical devices and mechanoids. Can be fired from a pathfinder artillery piece. Explodes when damaged.</description>
    <graphicData>
      <texPath>Things/Shells/Pathfinder_Shell_EMP</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>9.8</explosiveRadius>
        <explosiveDamageType>EMP</explosiveDamageType>
        <explosiveExpandPerStackcount>0.2</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>130~160</wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>Bullet_PathfinderShell_EMP</projectileWhenLoaded>
    <costList>
      <Steel>15</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <costListForDifficulty>
      <difficultyVar>classicMortars</difficultyVar>
      <costList>
        <Steel>25</Steel>
        <ComponentIndustrial>2</ComponentIndustrial>
      </costList>
    </costListForDifficulty>
    <recipeMaker>
      <researchPrerequisite>MicroelectronicsBasics</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_PathfinderShell_EMP</defName>
    <label>Pathfinder EMP shell</label>
    <graphicData>
      <texPath>Things/Projectile/ChargeATSho</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>EMP</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>80</speed>
      <explosionRadius>7.9</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>Explosion_EMP</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>

</Defs>
