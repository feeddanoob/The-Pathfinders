<?xml version="1.0" encoding="utf-8"?>
<Defs>
<ResearchProjectDef>
  <defName>PathfinderWeaponManufacturing</defName>
  <label>Pathfinder Firearm Manufacturing</label>
  <description>Gain the ability to produce the highly advanced Pathfinder weapons, expensive but effective.</description>
  <baseCost>4000</baseCost>
  <techLevel>Ultra</techLevel>
  <tab>PathfinderResearch</tab>
  <prerequisites>
    <li>MultiAnalyzer</li>
    <li>ChargedShot</li>
  </prerequisites>
  <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
  <requiredResearchFacilities>
    <li>MultiAnalyzer</li>
  </requiredResearchFacilities>
  <researchViewX>2</researchViewX>
  <researchViewY>2</researchViewY>
</ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PathfinderMeleeBasicWeaponManufacturing</defName>
    <label>Pathfinder Melee Manufacturing</label>
    <description>Gain the ability to produce the more basic melee weapons available to the Pathfinders.</description>
    <baseCost>1000</baseCost>
    <techLevel>Spacer</techLevel>
    <tab>PathfinderResearch</tab>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
      <li>Machining</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>2.2</researchViewX>
    <researchViewY>2.2</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PathfinderMeleeAdvancedWeaponManufacturing</defName>
    <label>Pathfinder Vanguard Manufacturing</label>
    <description>Gain the ability to produce highly advance Vanguard Monosword available to the Pathfinders. Though it lacks a persona variant, it can be manufactured at any sufficiently advanced colony.</description>
    <baseCost>1500</baseCost>
    <techLevel>Ultra</techLevel>
    <tab>PathfinderResearch</tab>
    <prerequisites>
      <li>MultiAnalyzer</li>
      <li>PathfinderMeleeBasicWeaponManufacturing</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>2.5</researchViewX>
    <researchViewY>2.5</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
  <defName>PathfinderArmourManufacturing</defName>
  <label>Pathfinder Armour Manufacturing</label>
  <description>Gain ability to manufacture Pathfinder Armour. Note: Cannot be worn by species other than Pathfinders</description>
  <baseCost>3000</baseCost>
  <techLevel>Ultra</techLevel>
  <tab>PathfinderResearch</tab>
  <prerequisites>
    <li>MultiAnalyzer</li>
    <li>PoweredArmor</li>
  </prerequisites>
  <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
  <requiredResearchFacilities>
    <li>MultiAnalyzer</li>
  </requiredResearchFacilities>
  <researchViewX>3.5</researchViewX>
  <researchViewY>1</researchViewY>
</ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PathfinderArtilleryManufacturing</defName>
    <label>Pathfinder Artillery Manufacturing</label>
    <description>Gain the ability to produce highly advance Pathfinder Artillery pieces, able to give highly accurate fire at a rapid rate, the Pathfinder's artillery is able to devastate targets more efficiently than your average mortar.</description>
    <baseCost>1000</baseCost>
    <techLevel>Ultra</techLevel>
    <tab>PathfinderResearch</tab>
    <prerequisites>
      <li>MultiAnalyzer</li>
      <li>PathfinderWeaponManufacturing</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>2.5</researchViewX>
    <researchViewY>4</researchViewY>
  </ResearchProjectDef>
</Defs>